@{
}
<head>
    <link rel="stylesheet" href="~/css/ServiceOrderList.css" asp-append-version="true" />
</head>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="position-relative card table-nowrap table-card">
                <div class="card-header align-items-center">
                    <h5 class="mb-0">Service Orders</h5>
                    <p class="mb-0 small text-muted">Customer: </p>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="small text-uppercase bg-body text-muted">
                            <tr>
                                <th>Item ID</th>
                                <th>Service</th>
                                <th>PickUpDate</th>
                                <th>Description</th>
                                <th>Completed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr class="align-middle">
                                        <td>
                                            @item.ItemId
                                        </td>
                                        <td>@item.SerName</td>
                                        <td>@item.PickUpDate.Date.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            @item.ItemDescription
                                        </td>
                                        <td>
                                            @item.Completed
                                        </td>
                                    </tr>
                                }
                            
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/getServices.js" asp-append-version="true"></script>
}